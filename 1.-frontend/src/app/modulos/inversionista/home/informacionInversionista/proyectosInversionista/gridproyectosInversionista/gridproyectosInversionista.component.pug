.grid-proyectos-inversionistas
    mat-grid-list(
        cols="{{columnas}}",
        rowHeight="{{height}}"
        )
        mat-grid-tile(*ngFor="let proyecto of proyectos", [colspan]="colspan", [rowspan]="rowspan", (click)="verMetricas(proyecto)")
            .proyecto
                .portada
                    img(src="{{proyecto?.portadas[0]?.link}}")
                .info-basica
                    h4 {{proyecto.nombre}}
                    p {{proyecto.createdAt | date: 'mediumDate'}}
                    p {{proyecto.resumen}}
    button.btn-cerrarMetricas(mat-button, *ngIf="habilitado", (click)="ocultarMetricas()")
        mat-icon clear
    .metricas-container(*ngIf="habilitado")
        .contenedor-izquierda
            .porcentaje-acumulado
                mat-progress-spinner(
                    class="example-margin",
                    [color]="color",
                    [mode]="mode",
                    [value]="value",
                    [diameter]="diameter")
                p {{value}}%
            .pago-minimo
                h4  Pago minimo de inversion: ${{metrica?.minimo}}
        .contenedor-centro
            .fecha-transcurrida
                mat-progress-spinner(
                    class="example-margin",
                    [color]="color_fecha",
                    [mode]="mode_fecha",
                    [value]="value_fecha",
                    [diameter]="diameter_fecha")
            .fecha-numero
                h4  Tiempo de duracion: {{metrica?.plazo}} meses 
        .contenedor-derecha
            .meta
                h1 Meta: ${{metrica?.meta}}
            .conseguido
                h1 Acumulado actualmente: ${{metrica?.acumulado}}
