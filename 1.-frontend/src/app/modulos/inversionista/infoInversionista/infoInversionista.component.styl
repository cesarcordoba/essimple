@import  '../../../../defaults.styl'
.inverionista-container
    display flex
    flex-direction row
    justify-content center
    min-height 80vh
    .foto-perfil, .foto-perfil-avatar
        width 50%
        display flex
        flex-direction column
        align-items center
        .subir-foto
            .imagen-container
                .imagen
                    width 100px
                    height 100px
                    border-radius 49%
                    overflow hidden
                    img
                        width 100%
                        height 100%
    .informacion-basica
        width 50%
        display flex
        flex-direction column
        align-items center